                <table class="table table-hover ">
                    <thead>

                        <tr>
                            <th scope="col">No :</th>
                            <th scope="col">Task</th>

                        </tr>
                    </thead>
                    <tbody>
                        <% for (var i = 0; i < tasks.length; i++) { %>

                            <tr>
                                <td>
                                    <%= i %>
                                </td>
                                <td>


                                    <%= tasks[i] %>



                                </td>
                            </tr>
                            <%  } %>

                    </tbody>
                </table>
            </div>
        </div>
        <button type="submit" name="submit" formaction="/return" class="form-control btn-primary submit_tasks">Add more Task </button>

    </form>


